{
  "version": 2,
  "name": "rirs-client",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-url.railway.app/api"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://your-backend-url.railway.app/api"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}